{
    //
    // Service dependencies
    //
    "Dependencies": {
        //
        // OPC UA explorer service
        //
        "OpcUaExplorer": {
            //
            // e.g. "http://127.0.0.1:9042/v1"
            //
            "webservice_url": "${?PCS_OPCUAEXPLORER_WEBSERVICE_URL}"
        }
    },
    //
    // Auth configuration
    //
    "AzureAd": {
        "Instance": "https://login.microsoftonline.com/",
        "Domain": "...",
        "TenantId": "...",
        "ClientId": "...",
        "CallbackPath": "/signin-oidc"
    },
    //
    // Logging
    //
    "Logging": {
        //
        // For more information about ASP.NET logging see
        // https://docs.microsoft.com/en-us/aspnet/core/fundamentals/logging
        //
        "IncludeScopes": true,
        //
        // ASP.NET log levels: Trace, Debug, Information, Warning, Error, Critical
        //
        "LogLevel": {
            "Default": "Warning"
        }
    }
}
