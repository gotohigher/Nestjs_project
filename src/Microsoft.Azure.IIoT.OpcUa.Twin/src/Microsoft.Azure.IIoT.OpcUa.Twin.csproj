<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7</LangVersion>
    <PackageLicenseUrl>https://github.com/Azure/iot-opc-twin-service/blob/master/LICENSE</PackageLicenseUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Microsoft</Authors>
    <Company>Microsoft</Company>
    <Product>Connected Factory OPC Twin services</Product>
    <Copyright>Microsoft Corp. All rights reserved.</Copyright>
    <Description>Azure OPC Twin services business logic</Description>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Microsoft.Azure.IIoT.OpcUa\src\Microsoft.Azure.IIoT.OpcUa.csproj" />
  </ItemGroup>
  <Choose>
    <When Condition="Exists('..\..\..\..\common-proxy')">
      <ItemGroup>
        <ProjectReference Include="..\..\..\..\common-proxy\src\Microsoft.Azure.IIoT.OpcUa.Proxy\src\Microsoft.Azure.IIoT.OpcUa.Proxy.csproj" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Microsoft.Azure.IIoT.OpcUa.Proxy" Version="1.0.0-preview001" />
      </ItemGroup>
    </Otherwise>
  </Choose>
  <Choose>
    <When Condition="Exists('..\..\..\..\common')">
      <ItemGroup>
        <ProjectReference Include="..\..\..\..\common\src\Microsoft.Azure.IIoT.Hub\src\Microsoft.Azure.IIoT.Hub.csproj" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Microsoft.Azure.IIoT.Hub" Version="1.0.0-preview001" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>